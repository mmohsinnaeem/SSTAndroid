<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/appbg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/app_bg" />

    <TextView
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#5393df"
        android:gravity="center_horizontal"
        android:padding="20dip"
        android:text="Telemetries"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >

            <RelativeLayout
                android:id="@+id/rl_telemetry_adco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dip"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/img_telemetry_adco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/sst_circle"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_telemetry_adco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text="ADCO"
                    android:textColor="@android:color/black"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_telemetry_cronus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dip"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/img_telemetry_cronus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/sst_circle"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_telemetry_cronus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text="CROUNS"
                    android:textColor="@android:color/black"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_telemetry_ethos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_telemetry_cronus"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/rl_telemetry_adco"
                android:contentDescription="@string/app_name"
                android:src="@drawable/sst_circle"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/img_telemetry_ethos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/sst_circle"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_telemetry_ethos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text="ETHOS"
                    android:textColor="@android:color/black"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_telemetry_eva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/rl_telemetry_ethos"
                android:layout_marginRight="30dp"
                android:layout_marginTop="-5dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/sst_circle"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/img_telemetry_eva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/sst_circle"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_telemetry_eva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text="EVA"
                    android:textColor="@android:color/black"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_telemetry_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/rl_telemetry_ethos"
                android:layout_marginLeft="30dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/sst_circle"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/img_telemetry_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/sst_circle"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_telemetry_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text="TIME"
                    android:textColor="@android:color/black"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_telemetry_spartan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_telemetry_time"
                android:layout_toLeftOf="@+id/rl_telemetry_eva"
                android:contentDescription="@string/app_name"
                android:src="@drawable/sst_circle"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/img_telemetry_spartan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/sst_circle"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_telemetry_spartan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text="SPARTAN"
                    android:textColor="@android:color/black"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_telemetry_topo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/rl_telemetry_spartan"
                android:layout_marginLeft="30dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/sst_circle"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/img_telemetry_topo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/sst_circle"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_telemetry_topo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text="TOPO"
                    android:textColor="@android:color/black"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_telemetry_vvo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/rl_telemetry_spartan"
                android:layout_marginRight="30dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/sst_circle"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/img_telemetry_vvo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/sst_circle"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_telemetry_vvo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text="VVO"
                    android:textColor="@android:color/black"
                    android:visibility="visible" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>